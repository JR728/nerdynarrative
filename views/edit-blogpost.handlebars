<!-- edit-blogpost.handlebars -->
<section class="edit-post-section">
    <h1>Edit Blog Post</h1>

    <!-- Form for editing an existing blog post -->
    <form action="/api/blogposts/{{postId}}/update" method="PUT" class="edit-post-form">
        <input type="hidden" name="postId" value="{{postId}}"> <!-- Add this hidden field -->
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="{{title}}" required>

            <label for="post_text">Content:</label>
            <textarea id="post_text" name="post_text" rows="4" required>{{post_text}}</textarea>

        <button type="submit">Save Changes</button>
    </form>
</section>
<script src="/js/editBlogPost.js"></script>
